/* --- ОБЩАЯ ТАБЛИЦА СТИЛЕЙ ДЛЯ ВСЕХ СТРАНИЦ --- */

/* Задаю для всех страниц шрифт и запрет на выделение текста */
body {
    font-family: verdana, sans-serif;
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -khtml-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
}

/* Стили для внешнего обрамления окон */
.windowOutsideStyle {
    background: linear-gradient(to bottom, #fceabb 0%,#fccd4d 50%,#f8b500 51%,#fbdf93 100%);
    border: thin solid #FFA500;
    border-radius: 10px;
    padding: 5px;
    position: absolute;
    cursor: default;
}

/* Стили для внутреннего обрамления окон */
.windowInsideStyle {
    background: linear-gradient(135deg, rgba(245,246,246,1) 0%,rgba(219,220,226,1) 21%,rgba(240,239,244,1) 47%,rgba(219,220,226,1) 85%,rgba(245,246,246,1) 100%);
    border-radius: 5px;
    border: thin solid #9C9C9C;
    text-align: center;
}

/* Стиль для шапки */
.heading {
    height:25px;
    text-align: center;
    font-size: 15px;
}

/* Стили для списков */
.list {
    text-align: left;
    font-size: 10pt;
    border: 1px solid;
    margin: auto;
    overflow-y: scroll;
    white-space: nowrap;
    overflow-x: scroll;
    padding: 3px;
    width: 425px;
}

/* Выделение жирным элементов списка при наведении */
.listElement:hover {
    font-weight: bold;
}

/* Стили для кнопок */
button {
    height: 25px;
    margin: 5px;
}

/* Стили для строк поиска */
.textField {
    width: 425px;
    margin: 5px;
}

