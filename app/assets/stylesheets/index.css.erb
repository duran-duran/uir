/* --- ТАБЛИЦА СТИЛЕЙ ДЛЯ ГЛАВНОЙ СТРАНИЦЫ (INDEX) --- */

/* Стили окошка */
#index-window-outside {
    width: 500px;
    height: 300px;
    left: 50%;
    top: 40%;
    margin-left: -256px;
    margin-top: -156px;
}

#index-window-inside {
    height: 275px;
}

/* Стили списка онтологий */
#index-list {
    height: 150px;
    cursor: pointer;
}

/* Стили контекстного меню */
#actionMenu{
    position: absolute;
    display: none;
    background: white;
    font-size: 8pt;
    border: 1px solid #D3D3D3;
    cursor: pointer;
    width: 150px;
}

.actionMenuOption{
    padding: 5px;
}


.actionMenuOption:hover{
    background: #B0C4DE;
    color: white;
}

/* Переопределение стандартных стилей гиперссылок :
отмена подчеркивания и цветового выделения */
a {
    text-decoration: none;
    color: inherit;
}


