.Container {
    padding: 0;
    margin: 0;
}

.Container li {
    list-style-type: none;
}


/* indent for all tree children excepts root */
.Node {
    background-image : url(<%= asset_data_uri 'tree_list_images/i.gif' %>);
    background-position : top left;
    background-repeat : repeat-y;
    margin-left: 18px;
    zoom: 1;
}

.IsRoot {
    margin-left: 0;
}


/* left vertical line (grid) for all nodes */
.IsLast {
    background-image: url(<%= asset_data_uri 'tree_list_images/i_half.gif' %>);
    background-repeat : no-repeat;
}

.ExpandOpen .Expand {
    background-image: url(<%= asset_data_uri 'tree_list_images/expand_minus.gif' %>);
}

/* closed is higher priority than open */
.ExpandClosed .Expand {
    background-image: url(<%= asset_data_uri 'tree_list_images/expand_plus.gif' %>);
}

/* highest priority */
.ExpandLeaf .Expand {
    background-image: url(<%= asset_data_uri 'tree_list_images/expand_leaf.gif' %>);
}

.Content {
    min-height: 18px;
    margin-left:18px;
}



/* * html  .Content {
    height: 18px;       Хрень для старых IE.
}*/

.Expand {
    width: 18px;
    height: 18px;
    float: left;
}


.ExpandLoading   {
    width: 18px;
    height: 18px;
    float: left;
    background-image: url(<%= asset_data_uri 'tree_list_images/expand_loading.gif' %>);
}



.ExpandOpen .Container {
    display: block;
}

.ExpandClosed .Container {
    display: none;
}

.ExpandOpen .Expand, .ExpandClosed .Expand {
    cursor: pointer;
}
.ExpandLeaf .Expand {
    cursor: auto;
}
